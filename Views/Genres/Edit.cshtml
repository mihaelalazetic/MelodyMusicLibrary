@model MelodyMusicLibrary.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Genre</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control bg-dark text-white" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Upload Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" onchange="previewImage(event)" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <label class="control-label">Current Image</label>
                        <div>
                            <img src="~/images/genres/@(Model.Name).png" alt="Current Image" class="img-thumbnail bg-dark text-white" style="max-width: 100%; height: auto;" />
                        </div>
                    </div>
                    <div class="col">
                        <i class="fas fa-arrow-right fa-3x text-muted"></i>
                    </div>
                    <div class="col-6">
                        <label class="control-label">New Image</label>
                        <div>
                            <img id="imagePreview" src="#" alt="New Image Preview" class="img-thumbnail bg-dark text-white" style="max-width: 100%; height: auto;" />
                        </div>
                    </div>
                </div>
            </div>


 

            <div class="form-group">
                <button type="submit" class="btn btn-outline-warning">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function previewImage(event) {
            const input = event.target;
            const reader = new FileReader();
            reader.onload = function () {
                const imagePreview = document.getElementById('imagePreview');
                imagePreview.src = reader.result;
            }
            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
